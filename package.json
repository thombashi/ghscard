{
    "name": "ghscard",
    "version": "0.1.3",
    "description": "ghscard is a JavaScript widget to generate interactive GitHub user/repository/organization cards for static web pages (like GitHub pages).",
    "main": "index.js",
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts"
        }
    },
    "scripts": {
        "build": "rimraf dist/* && tsc && webpack",
        "lint": "tslint src/*.ts",
        "package": "npm run build && uglifyjs dist/ghscard.js --compress drop_console=true -o dist/ghscard.min.js",
        "watch": "npm-watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thombashi/ghscard.git"
    },
    "keywords": [
        "github",
        "card"
    ],
    "author": "Tsuyoshi Hombashi <tsuyoshi.hombashi@gmail.com> (https://github.com/thombashi)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/thombashi/ghscard/issues"
    },
    "homepage": "https://github.com/thombashi/ghscard",
    "devDependencies": {
        "jquery": "^3.3.1",
        "moment": "^2.23.0",
        "npm-watch": "^0.6.0",
        "prettier": "^1.15.3",
        "rimraf": "^2.6.3",
        "tslint": "^5.12.1",
        "typescript": "^3.1.6",
        "uglify-js": "^3.4.4",
        "webpack": "^4.28.4",
        "webpack-cli": "^3.2.1"
    },
    "dependencies": {}
}
